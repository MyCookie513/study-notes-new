<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
 <hibernate-configuration>
 	<session-factory>
 		<!-- 数据库驱动 -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- 数据库连接的URL -->
		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/jack_one</property>
		<!-- 数据库连接用户名 -->
		<property name="connection.username">root</property>
		<!-- 数据库连接密码 -->
		<property name="connection.password">988513</property>
		<!-- Hibernate方言 来确定使用那种数据库的使用类型-->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<!-- 打印SQL语句   在控制台上打印数据库的操作步骤 -->
		<property name="show_sql">true</property>
		<!-- 映射文件   将数据库表内的文件与持久类相互映射； -->
		<mapping resource="com/cn/longclass/test_hibernate.hbm.xml"/>
 	</session-factory>
 </hibernate-configuration>
